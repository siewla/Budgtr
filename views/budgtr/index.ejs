<!doctype html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs') %>
    </head>
    <body>
        <h2>Budget List</h2>
        <div id ="budget-table">
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Amount</th>
                    </tr>
                </thead>
    
                <tbody>
                    <% budgets.forEach((item, index) => { %>
                    <tr>
                        <td><%=item.date%></td>
                        <td><a href="/budgets/<%=index%>"><%=item.name%></a></td>
                        <td><%=item.amount%></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>  
        </div> 
    </body>
</html>